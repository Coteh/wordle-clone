{
  "name": "wordle-clone",
  "version": "1.4.0",
  "description": "A clone of the popular Wordle game.",
  "main": "index.js",
  "bin": {
    "wordle": "./cli.js",
    "wordle-clone": "./cli.js"
  },
  "scripts": {
    "dev": "sh ./scripts/run_dev_server.sh HTTP LOCAL",
    "devs": "sh ./scripts/run_dev_server.sh HTTPS LOCALS",
