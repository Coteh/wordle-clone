    "preview": "serve -p 3000 ./build",
    "previews": "serve -p 3001 --ssl-cert ./ssl/local.pem --ssl-key ./ssl/local-key.pem ./build",
    "test": "NODE_ENV=test mocha",
    "test-ci": "mocha test --reporter mocha-junit-reporter --reporter-options mochaFile=./results/unit-test-results.xml",
    "cypress": "cypress"
  },
  "keywords": [],
