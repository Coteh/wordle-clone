    "cypress-wait-until": "^1.7.2",
    "marked": "^15.0.6",
    "mocha": "^10.4.0",
    "mocha-junit-reporter": "^2.2.1",
    "mock-fs": "^5.2.0",
    "serve": "^14.2.3",
    "sinon": "^15.2.0"
  },
  "dependencies": {
    "@folder/xdg": "^4.0.1",
    "clipboardy": "^3.0.0",
    "commander": "^12.1.0"
